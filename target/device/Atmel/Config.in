	depends on BR2_TARGET_AT91 || BR2_TARGET_AVR32
	default "/tftpboot"
	help
	  Copies the resulting image to a secondary location.

config BR2_BOARD_PATH
	string "Atmel board repository"
	depends on BR2_TARGET_AT91 || BR2_TARGET_AVR32
	default "target/device/Atmel/$(BR2_BOARD_NAME)"
